<?xml version="1.0" encoding="UTF-8"?>
<!-- Creates top and bottom borders-->

<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

<!--    make the box-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

<!--    color and outline of the box-->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>
</shape>